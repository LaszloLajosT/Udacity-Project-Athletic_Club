<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <RelativeLayout
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:configChanges="orientation"
        android:screenOrientation="portrait"
        tools:context=".MainActivity">

        <ImageView
            android:id="@+id/photo_Image_view"
            android:src="@drawable/track"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/cityname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:paddingTop="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp"
            android:text="Bournemouth"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/club"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/cityname"
            android:layout_centerHorizontal="true"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingBottom="16dp"
            android:text="Athletic Club"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <TextView
            android:id="@+id/contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Contact the club:"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_below="@+id/club"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingTop="30dp"
            android:paddingBottom="24sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+447766433090"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@+id/contact"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="secretary@bournemouthac.co.uk"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@+id/phone"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Address:"
            android:textAppearance="?android:textAppearanceLarge"
            android:layout_below="@+id/email"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingTop="30dp"
            android:paddingBottom="24dp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/placename"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kings Park Athletic Centre,"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@+id/address"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/street"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kings Park Drive,"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@+id/placename"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bournemouth"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@+id/street"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/postcode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BH7 6JD"
            android:textAppearance="?android:textAppearanceSmall"
            android:layout_below="@+id/city"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingTop="0dp"
            android:paddingBottom="8dp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/since"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:paddingRight="16dp"
            android:paddingBottom="24dp"
            android:fontFamily="sans-serif-light"
            android:text="Since 1906"
            android:textColor="@android:color/white"
            android:textSize="12sp" />

        <ImageView
            android:id="@+id/logo1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_toLeftOf="@+id/club"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/cityname"
            android:src="@drawable/bac" />

        <ImageView
            android:id="@+id/logo2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="fitCenter"
            android:layout_toRightOf="@+id/club"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/cityname"
            android:src="@drawable/bac" />

    </RelativeLayout>
</ScrollView>